 <h2> {{ title }}</h2>
 <div> <form method="post">
    <input type="search" name="filter">
         <button name="submit"> Filter </button> </form>


 </div>
  <div>


         {% for movie in movies  %}
             <h3>{{  movie.title  }}   </h3>
           Brief description:   {{  movie.description | raw}} <br>
             Main actor:  {{   movie.actors |raw}} <br>
             Director: {{  movie.directors|raw }} <br>
             <img src=" {{ file_url(movie.poster)  }} " > <br>
         {% endfor %}


  </div>
  <div>

      {% if (form.filter.get('value') == (movie.title)) %}
      <h3> {{ movie.title }}</h3>
      {% endif %}


  </div>


